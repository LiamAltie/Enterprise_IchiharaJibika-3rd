---
import Layout from '../layouts/Layout.astro';
---

<Layout title="アクセス - いちはら耳鼻咽喉科">
  <div class="grid place-items-center">
    <div class="mt-8 w-full max-w-screen-lg px-4 lg:px-0">
    <h1 class="heading-leaf">アクセス</h1>
    <div class="h-0 overflow-hidden pb-[50rem] relative mt-[15px]">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d51947.41976526309!2d140.1281314743301!3d35.53607122887683!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xe8a8461e227c664f!2z44GE44Gh44Gv44KJ6ICz6by75ZK95ZaJ56eR!5e0!3m2!1sja!2sjp!4v1605714477400!5m2!1sja!2sjp"
        style="border: 0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="いちはら耳鼻咽喉科の場所"
        class="absolute left-0 top-0 h-full w-full rounded-lg border-0"
      ></iframe>
    </div>
    
    <h1 class="heading-leaf">周辺地図</h1>
    <div class="grid grid-cols-12 gap-8">
      <div class="lg:col-span-5 col-span-12">
        <h2 class="heading-sub">お車でのアクセス</h2>
        <div class="grid grid-cols-12 mt-4">
          <div class="col-span-3">
            <p>京成千原線</p>
          </div>
          <div class="col-span-6">
            <p>ちはら台駅より</p>
          </div>
          <div class="col-span-3">
            <p>車で8分</p>
          </div>
        </div>
        <div class="grid grid-cols-12">
          <div class="col-span-3">
            <p>JR内房線</p>
          </div>
          <div class="col-span-6">
            <p>八幡宿駅・浜野駅より</p>
          </div>
          <div class="col-span-3">
            <p>車で20分</p>
          </div>
        </div>
        <div class="grid grid-cols-12">
          <div class="col-span-3">
            <p>JR外房線</p>
          </div>
          <div class="col-span-6">
            <p>鎌取駅より</p>
          </div>
          <div class="col-span-3">
            <p>車で20分</p>
          </div>
        </div>
      </div>
      <div class="lg:col-span-7 col-span-12">
        <img src="/images/access/map.png" alt="周辺地図" class="w-full rounded-2xl" />
      </div>
    </div>
    </div>
  </div>
</Layout>

